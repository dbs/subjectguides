<?php
/**
* Ask a Librarian code
*/

function askalibrarian_node_view($node, $view_mode, $langcode) {
    $jsfile = '/askalibrarian.js';
    drupal_add_js(drupal_get_path('module', 'askalibrarian') . $jsfile,
        array(
            'type' => 'file',
            'scope' => 'footer',
            'requires_jquery' => FALSE,
            'every_page' => TRUE,
            'preprocess' => TRUE
        )
    );
    drupal_add_css(drupal_get_path('module', 'askalibrarian') .'/askalibrarian.css',
        array(
            'type' => 'file',
            'every_page' => TRUE,
            'preprocess' => TRUE
         )
     );
}

function askalibrarian_block_info() {
  // This example comes from node.module.
  $blocks['ask_a_librarian'] = array(
    'info' => t('Ask the library'),
    'cache' => DRUPAL_NO_CACHE,
  );
  return $blocks;
}

function askalibrarian_block_view($delta = '') {
  // This example is adapted from node.module.
  $block['title'] = t('');
  $block['content'] = array(
    '#markup' => '<div class="needs-js">loading...</div>',
  );
  return $block;
}
